@model CheckPlease.Models.ViewModels.AddOrderViewModel

@{
    ViewData["Title"] = "AddOrder";
}

<h1>AddOrder</h1>

<h4>AddOrderViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select asp-for="@Model.Gou.SelectedFoodItemIds" multiple>
                    @foreach(var foodItem in Model.Menu)
                    {
                        <option value=@foodItem.Id>@foodItem.Description (@foodItem.Price)</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back to Group Order", "Details", new { id=Model.Gou.GroupOrderId })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
