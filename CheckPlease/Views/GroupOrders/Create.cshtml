@model CheckPlease.Models.ViewModels.CreateGroupOrderViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CreateGroupOrderViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GroupOrder.RestaurantId" class="control-label">Restaurant</label>
                <select asp-for="GroupOrder.RestaurantId" class="form-control">
                    @foreach (Restaurant r in Model.Restaurants)
                    {
                        <option value="@r.Id">@r.Name</option>
                    }
                    <option selected hidden disabled>-- Select Restaurant --</option>
                </select>
                <span asp-validation-for="GroupOrder.RestaurantId" class="text-danger"></span>
            </div>
            <div id="group_member_fields">
                <div class="form-group">
                    <label class="control-label">Group Member:</label>
                    <select asp-for="@Model.SelectedUserIds" multiple class="form-control">
                        @foreach (UserProfile up in Model.UserProfiles)
                        {
                            <option value="@up.Id">@up.Email</option>
                        }
                        <option selected hidden disabled>-- Select User --</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
